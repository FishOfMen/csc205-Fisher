z<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Address Book</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Address Book", "index", "Index", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "index", "Index")</li>
                    <li>@Html.ActionLink("Login", "index", "Login")</li>
                    <li>@Html.ActionLink("Families", "index", "Families")</li>
                    <li>@Html.ActionLink("People", "index", "People")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-8 text-left">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="container-fluid text-center">
                    <p>&copy; @DateTime.Now.Year - The Address Book</p>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
